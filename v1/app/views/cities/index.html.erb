<p id="notice"><%= notice %></p>



<div class="container">
  <div class="row">
    <h1 class="text-center">Ciudades</h1>
  </div>
  <div class="row">
    <%= link_to "Actualizar temperaturas", consultar_temperatuas_path, class: "btn btn-primary"%>
  </div>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Temperature</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @cities.each do |city| %>
          <tr>
            <td><%= city.name %></td>
            <td><%= city.temperatures.present? ? city.temperatures.last.temp : 'No existen datos cargados.' %></td>
            <td><%= link_to 'Ver mas', city %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
