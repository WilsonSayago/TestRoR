<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
      <h1>
        <strong>Ciudad:</strong>
        <%= @city.name %>
      </h1>

  </div>
  <div class="row">
    <h2>Historico de temperaturas</h2>
  </div>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>Temperatura</th>
          <th>Fecha de consulta</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @city.temperatures.each do |t| %>
          <tr>
            <td><%= t.temp %></td>
            <td><%= t.created_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= link_to 'Back', cities_path, class: "btn btn-success" %>
